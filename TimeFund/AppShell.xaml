<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TimeFund.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TimeFund"
    xmlns:views="clr-namespace:TimeFund.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Home" Route="TimeFundPage">
            <ShellContent Title="TimeFund"
                          ContentTemplate="{DataTemplate views:TimeFundPage}"
                          Route="TimeFundPage" />
        </Tab>
        <Tab Title="Activities" Route="AllActivitiesPage">
            <ShellContent Title="Activities"
                          ContentTemplate="{DataTemplate views:AllActivitiesPage}"
                          Route="AllActivitiesPage" />
        </Tab>
        <Tab Title="History" Route="AllUsageLogsPage">
            <ShellContent Title="History"
                          ContentTemplate="{DataTemplate views:AllUsageLogsPage}"
                          Route="AllUsageLogsPage" />
        </Tab>
    </TabBar>

</Shell>
