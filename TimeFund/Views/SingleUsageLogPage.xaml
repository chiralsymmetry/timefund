<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:TimeFund.ViewModels"
             x:Class="TimeFund.Views.SingleUsageLogPage"
             x:DataType="viewmodels:SingleUsageLogViewModel"
             Title="{Binding Title}">
    <Grid RowDefinitions="Auto,*,Auto">
        <Label Grid.Row="0" Text="{Binding Description}" />
        <Button Grid.Row="2" Text="Delete" Command="{Binding DeleteUsageLogCommand}" />
    </Grid>
</ContentPage>