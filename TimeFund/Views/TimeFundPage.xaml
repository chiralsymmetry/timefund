<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TimeFund.Views.TimeFundPage"
             xmlns:viewmodels="clr-namespace:TimeFund.ViewModels"
             x:DataType="viewmodels:TimeFundViewModel"
             Title="TimeFundPage">
    <Grid RowDefinitions="*,Auto,2*" ColumnDefinitions="*,*">
        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
               Text="{Binding TimerFormat}"
               FontSize="32"
               VerticalOptions="Center" HorizontalOptions="Center" />
        <Button Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                Text="Start/Stop" />
        <ScrollView Grid.Row="2" Grid.Column="0">
            <CollectionView ItemsSource="{Binding NonNegativeActivities, Mode=OneWay}" ItemTemplate="{StaticResource ActivityTemplate}" />
        </ScrollView>
        <ScrollView Grid.Row="2" Grid.Column="1">
            <CollectionView ItemsSource="{Binding NegativeActivities, Mode=OneWay}" ItemTemplate="{StaticResource ActivityTemplate}" />
        </ScrollView>
    </Grid>
</ContentPage>